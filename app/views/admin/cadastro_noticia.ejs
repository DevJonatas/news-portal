<html>
    <head>
        <meta charset="utf-8"></head>
        <title>Cadastro de noticia</title>
    </head>

    <body>

        <h3>Cadastro de notícias</h3>

        </br>

        <% if(validate){ %>    
            <ul>
                <% for(var i = 0; i < validate.length; i++){ %>
                    <li>
                        <%=validate[i].msg %>
                    </li>
                <% } %>
            </ul>   
        <% } %> 
            
        <form action="/noticias/salvar" method="post">
        
            <label>Título da Noticia</label></br>
            
            <input type="text" name="titulo" placeholder="Insira o título da noticia" value="<%=noticia.titulo %>" ></br></br>
        
            <label>Notícia</label></br>
            
            <textarea name="noticia" rows="10" cols="30"><%=noticia.noticia%></textarea></br></br>
            
            <label>Data de criação</label></br>
            
            <input type="date" id="data" name="data" value="<%=noticia.data%>"></br></br>
        
            <input type="submit" value="Enviar">
        </form>

            
    </body>
</html>